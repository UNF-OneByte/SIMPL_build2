    <div class="row">
        <div class="col-md-6">
            <div class="thumbnail">
                <h4><strong>Cost Breakdown:</strong></h4>
                <hr />
                <div class="dataTables_length" id="example_length">
                    <table id="tasks" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Task Name</th>
                                <th>Est. Cost ($)</th>
                                <th>Act. Cost ($)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tasks)
                            {
                                <tr>
                                    <th>@item.Name</th>
                                    <th>@item.EstimatedCost</th>
                                    <th>
                                        @if (@item.ActualCost == null)
                                        {
                                            <p>-</p>                                            
                                        }
                                        else
                                        {
                                            @item.ActualCost
                                        }
                                    </th>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>TOTAL:</td>
                                <td>
                                    <p>@Etot</p>
                                </td>
                                <td>
                                    <p>@Atot</p>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>

        <div class="col-md-6">
            <div class="thumbnail">
                <h4><strong>Vendor Cost Breakdown:</strong></h4>
                <hr />
                <div class="dataTables_length" id="example_length">
                    <table id="vendor" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Vendor Name</th>
                                <th>Amount Spent ($)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{


                                @foreach (var item in Model.VendorCost)
                                {
                                    <tr>
                                        <th>@item.Vendor</th>
                                        <th>@item.Cost</th>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>TOTAL:</td>
                                @{
                                    decimal? Vendor_Total = 0;
                                    foreach (var item in Model.VendorCost)
                                    {
                                        decimal temp = decimal.Parse(item.Cost);
                                        Vendor_Total += temp;
                                    }
                                    <td>
                                        @Vendor_Total
                                    </td>
                                }
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="thumbnail">
                <h4><strong>Hours Worked: (by task)</strong></h4>
                <hr />
                <div class="dataTables_length" id="example_length">
