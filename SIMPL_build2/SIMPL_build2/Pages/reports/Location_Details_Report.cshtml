@{
    decimal? Etot = 0;
    @foreach (var item in Model.Tasks)
    {
        @if (item.EstimatedCost == null)
        {
            Etot += 0;
        }
        else
        {
            Etot += item?.EstimatedCost;
        }
    }

    decimal? Atot = 0;
    @foreach (var item in Model.Tasks)
    {
        @if (item.ActualCost == null)
        {
            Atot += 0;
        }
        else
        {
            Atot += item?.ActualCost;
        }
    }
}




