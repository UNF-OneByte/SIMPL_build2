                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>TOTAL (hours): </td>
                                @{
                                    decimal Temp_Hours = 0;
                                    foreach (var item in Model.HoursWorked)
