                                        decimal temp = decimal.Parse(item.HoursWorked);
                                        Temp_Hours += temp;
                                    }
                                    <td>
                                        @Temp_Hours
                                    </td>
                                }
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="thumbnail">
                <h4><strong>Amount Spent: (by cost type)</strong></h4>
