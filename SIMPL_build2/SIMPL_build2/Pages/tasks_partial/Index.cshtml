@model SIMPL.Pages.tasks_partial.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].EstimatedCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].ActualCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].EstimatedHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].ActualHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].CostType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Vendor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tasks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TaskId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TaskId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TaskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
