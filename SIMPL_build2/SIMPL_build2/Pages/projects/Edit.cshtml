@page
@model SIMPL.Pages.projects.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Projects</h4>
<hr />
<div class="row">
    
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Projects.ProjectId" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="control-label">Project Manager ID</label>
                <select asp-for="Projects.ProjectManagerId" class="form-control" asp-items="ViewBag.ProjectManagerId"></select>

            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Project Name</label>
                <input asp-for="Projects.ProjectName" class="form-control" />
                <span asp-validation-for="Projects.ProjectName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea rows="5" asp-for="Projects.Description" class="form-control"></textarea>
                <span asp-validation-for="Projects.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="control-label">Actual Start Date</label>
                <input asp-for="Projects.ActualStartDate" class="form-control" />
                <span asp-validation-for="Projects.ActualStartDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Estimated Start Date</label>
                <input asp-for="Projects.EstimatedStartDate" class="form-control" />
                <span asp-validation-for="Projects.EstimatedStartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="control-label">Estimated End Date</label>
                <input asp-for="Projects.EstimatedEndDate" class="form-control" />
                <span asp-validation-for="Projects.EstimatedEndDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label class=" control-label">Actual End Date</label>
                <input asp-for="Projects.ActualEndDate" class="form-control" />
                <span asp-validation-for="Projects.ActualEndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="control-label">Estimated Initial Cost</label>
                <input asp-for="Projects.EstimatedInitialCost" class="form-control" />
                <span asp-validation-for="Projects.EstimatedInitialCost" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Estimated Initial Hours</label>
                <input asp-for="Projects.EstimatedInitialHours" class="form-control" />
                <span asp-validation-for="Projects.EstimatedInitialHours" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
    </form>
    
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
